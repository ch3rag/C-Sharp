<Window x:Class="BinaryResourcesApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinaryResourcesApplication"
        mc:Ignorable="d"
        Title="Fun With Binary Resources" Height="480" Width="640" Loaded="Window_Loaded">
    <DockPanel LastChildFill="True">
        <ToolBar Height="60" DockPanel.Dock="Top" Name="PicturePickerToolBar" ToolBarTray.IsLocked="True">
            <Button Height="40" Width="100" BorderBrush="Black" Margin="5" Content="Previous" Name="PreviousImageButton" Click="PreviousImageButton_Click"></Button>
            <Button Height="40" Width="100" BorderBrush="Black" Margin="5" Content="Next" Name="NextImageButton" Click="NextImageButton_Click"></Button>
        </ToolBar>
        <Border BorderBrush="DarkGoldenrod" BorderThickness="2">
            <Image Name="PictureHolder" Stretch="Fill"></Image>
        </Border>
    </DockPanel>
</Window>
