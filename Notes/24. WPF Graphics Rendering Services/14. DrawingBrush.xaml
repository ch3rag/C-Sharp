<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Canvas Height="200" Width="200">
    <Canvas.Background>
      <DrawingBrush>
        <DrawingBrush.Drawing>
          <GeometryDrawing>
            <GeometryDrawing.Geometry>
              <GeometryGroup>
                <EllipseGeometry Center="75,70" RadiusX="30" RadiusY="30"></EllipseGeometry>
                <RectangleGeometry Rect="25,55 100 30"></RectangleGeometry>
                <LineGeometry StartPoint="0,0" EndPoint="70,30"></LineGeometry>
                <LineGeometry StartPoint="70,30" EndPoint="0,30"></LineGeometry>
              </GeometryGroup>
            </GeometryDrawing.Geometry>
            <GeometryDrawing.Pen>
              <Pen Brush="Blue" Thickness="5"></Pen>
            </GeometryDrawing.Pen>
            <GeometryDrawing.Brush>
              <SolidColorBrush Color="Orange"></SolidColorBrush>
            </GeometryDrawing.Brush>
          </GeometryDrawing>
        </DrawingBrush.Drawing>
      </DrawingBrush>
    </Canvas.Background>
  </Canvas>
</Page>