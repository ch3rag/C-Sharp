<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Fun With Panels" Height="100" Width="300">
  <Grid Background="LightSteelBlue">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"></ColumnDefinition>
      <ColumnDefinition></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Label x:Name="lblLeft" Background="GreenYellow" Grid.Column="0" Grid.Row="0" Content="Left!"></Label>
    <GridSplitter Grid.Column="0" Width="5" Background="Orange"></GridSplitter>
    <Label x:Name="lblRight" Background="LightBlue" Grid.Column="1" Grid.Row="0" Content="Right!"></Label>
  </Grid>
</Page>