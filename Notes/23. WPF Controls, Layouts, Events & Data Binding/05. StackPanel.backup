<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Fun With Panels" Height="245" Width="325">
  <!--
  Horizontal Stacking
  <StackPanel Background="LightSteelBlue" Orientation="Horizontal"> 
  -->
  <StackPanel Background="LightSteelBlue">
    <Label x:Name="lblInstructions" FontSize="15" Content="Enter Information"></Label>
    <Label x:Name="lblMake" Content="Make"></Label>
    <TextBox x:Name="txtMake"></TextBox>
    <Label x:Name="lblColor" Content="Color"></Label>
    <TextBox x:Name="txtColor"></TextBox>
    <Label x:Name="lblPetName" Content="PetName"></Label>
    <TextBox x:Name="txtPetName"></TextBox>
    <Button x:Name="btnOk" Width="80" Content="OK"></Button>
  </StackPanel>
</Page>