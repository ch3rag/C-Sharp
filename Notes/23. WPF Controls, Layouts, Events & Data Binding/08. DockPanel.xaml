<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Fun With Panels" Height="100" Width="300">
  <DockPanel LastChildFill="True" Background="AliceBlue">
    <Label DockPanel.Dock="Top" Name="lblInstruction" FontSize="15" Content="Enter Car Information"></Label>
    <Label DockPanel.Dock="Left" Name="lblMake" Content="Make"></Label>
    <Label DockPanel.Dock="Right" Name="lblColor" Content="Color"></Label>
    <Label DockPanel.Dock="Bottom" Name="lblPetName" Content="PetName"></Label>
    <Button Name="btnOk" Content="OK"></Button>
  </DockPanel>
</Page>